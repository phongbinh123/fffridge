<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="recipes"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/brand_teal"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

        <!-- Thanh tÃ¬m kiáº¿m -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/background_gray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_search"
                    android:tint="@color/text_hint"
                    android:contentDescription="Search icon" />

                <EditText
                    android:id="@+id/etSearchRecipe"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Search recipes..."
                    android:textColorHint="@color/text_hint"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

                <ImageButton
                    android:id="@+id/btnSearch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_search"
                    android:tint="@color/brand_teal"
                    android:contentDescription="Search" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <!-- WIDGET Gá»¢I Ã THÃ”NG MINH -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSmartSuggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header widget -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯ Smart Suggestion from Your Fridge"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/brand_teal_dark"
                        android:layout_marginBottom="12dp" />

                    <!-- Container chÃ­nh: 2 cá»™t -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Cá»˜T TRÃI: NguyÃªn liá»‡u -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Available Ingredients:"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="8dp" />

                            <!-- Danh sÃ¡ch nguyÃªn liá»‡u -->
                            <TextView
                                android:id="@+id/tvAvailableIngredients"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â€¢ Chicken\nâ€¢ Eggs\nâ€¢ Tomato\nâ€¢ Onion\nâ€¢ Rice"
                                android:textSize="13sp"
                                android:textColor="@color/text_secondary"
                                android:lineSpacingExtra="4dp" />

                        </LinearLayout>

                        <!-- Cá»˜T PHáº¢I: Recipe suggestion -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <!-- HÃ¬nh áº£nh cÃ´ng thá»©c -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="0dp">

                                <ImageView
                                    android:id="@+id/ivSuggestedRecipe"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:contentDescription="Suggested Recipe"
                                    android:src="@drawable/ic_launcher_background" />
                            </com.google.android.material.card.MaterialCardView>

                            <!-- TÃªn cÃ´ng thá»©c -->
                            <TextView
                                android:id="@+id/tvSuggestedRecipeTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Chicken Fried Rice"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:maxLines="2"
                                android:ellipsize="end" />

                            <!-- Match score -->
                            <TextView
                                android:id="@+id/tvMatchScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="âœ“ 4/5 ingredients match"
                                android:textSize="12sp"
                                android:textColor="@color/brand_teal"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <!-- Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnRefreshSuggestion"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="ðŸ”„ Refresh"
                            android:textColor="@color/brand_teal"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:backgroundTint="@android:color/white"
                            app:strokeColor="@color/brand_teal"
                            app:strokeWidth="2dp"
                            app:cornerRadius="24dp" />

                        <Button
                            android:id="@+id/btnViewSuggestedRecipe"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="View Recipe"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:backgroundTint="@color/brand_teal"
                            app:cornerRadius="24dp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Danh sÃ¡ch táº¥t cáº£ recipes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Recipes"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecipes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FAB Random -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabRandom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:text="Random"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:icon="@android:drawable/ic_menu_sort_by_size"
        app:iconTint="@android:color/white"
        app:backgroundTint="@color/brand_teal"
        app:elevation="6dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
