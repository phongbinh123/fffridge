            android:textSize="13sp"
            android:textColor="@color/brand_teal"
            android:textStyle="bold"
            tools:text="ðŸ¥˜ 8 ingredients"
            app:layout_constraintStart_toStartOf="@id/tvRecipeTitle"
            app:layout_constraintEnd_toEndOf="@id/tvRecipeTitle"
            app:layout_constraintTop_toBottomOf="@id/tvRecipeMeta"
            app:layout_constraintBottom_toBottomOf="@id/cardImage" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
